<!-- views/id-card.handlebars -->
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .id-card {
      width: 1000px;
      height: 500px;
      border: 1px solid #ccc;
      padding: 10px;
      margin: 20px auto;
      text-align: center;
      
    }

     .logo {
      width: 50px; 
      height: 50px;
      margin-right: 10px;
    }


    .header {
      text-align: center;
      font-size: 18px;
      font-weight: bold;
        border-bottom: 2px solid #333; /* Add this line for the underline effect */
      padding-bottom: 10px; /* Optional: Adjust padding for spacing */
    }

    .user-info {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 20px;
    }

    .user-info img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .user-details {
      text-align: left;
    }

    .display_flex{
      display: flex;
      justify-content: space-between;
    }
    .profile__image{
      width: 200px;
    }

    .footer_sign{
        display: flex;
        justify-content: space-between;
    }
  </style>
</head>
<body>
  <div class="id-card">
    <div class="header">
      <div>
        <img src="logo.png" alt="Logo" class="logo">
        </div>
        <div>
      UNITED DOCTORS FRONT ASSOCIATION</div>
    <div>REGISTERED UNDER SECTION 8 ACT.2013 UNDER THE NINSITRY OF CORPORATE AFFAIRS</div>
    </div>
    <div class="user-info">
      <div class="profile__image">
        
      <img src="profile-picture.jpg" alt="Profile Picture">
      </div>
      <div class="user-details">
        <h2  class="display_flex">
          <span>NAME</span>
          <span>:</span>
           <span style="margin-left: 50px;">{{name}}</span>
          </h2>
        <h2 class="display_flex">
          <span>
          FATHER'S NAME 
          </span>
            <span>:</span>
         <span> {{father_name}}
          </span>
         </h2>
        <h2 class="display_flex">
          <span>
          QUALIFICATION 
          </span>
            <span>:</span>
          <span>{{qualification}}
</span>

          </h2>
        <h2 class="display_flex">
          <span>DESIGNIATION
            </span>
             <span>:</span>
           <span>  {{desgination}}
</span>

           </h2>
       <h2 class="display_flex">
        <span>
        DOB 
        </span>
         <span>:</span>
        <span>
         {{dob}}
         </span>
         </h2>
        <h2 class="display_flex">
          <span>
          ADDRESS
          </span>
         <span>:</span> 
         <span>{{address}}</span>
          </h2>
        <!-- Add other fields as needed -->
      </div>

   
    </div>
       <div class="footer_sign">
        <h3>NATIONAL CHAIRMAN</h3>
          <h3>NATIONAL PRESIDENT</h3>
            <h3>NATIONAL GENERAL SECRETARY</h3>
      </div>
  </div>
</body>
</html>
